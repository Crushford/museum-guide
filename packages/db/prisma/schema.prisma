generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Museum {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  rooms       Room[]
}

model Room {
  id        Int      @id @default(autoincrement())
  name      String
  museumId Int
  createdAt DateTime @default(now())

  museum   Museum  @relation(fields: [museumId], references: [id], onDelete: Cascade)
}
